{
  "title": "API Performance Monitoring",
  "uid": "api-performance",
  "tags": ["aitransaction", "api"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 },
      "type": "stat",
      "title": "Total Requests/sec",
      "targets": [
        {
          "expr": "sum(rate(http_server_request_duration_seconds_count{job=\"transaction-api\"}[5m]))",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "id": 2,
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 },
      "type": "stat",
      "title": "Error Rate",
      "targets": [
        {
          "expr": "sum(rate(http_server_request_duration_seconds_count{job=\"transaction-api\",http_response_status_code=~\"5..\"}[5m])) / sum(rate(http_server_request_duration_seconds_count{job=\"transaction-api\"}[5m])) * 100",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      }
    },
    {
      "id": 3,
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 },
      "type": "stat",
      "title": "Avg Response Time",
      "targets": [
        {
          "expr": "rate(http_server_request_duration_seconds_sum{job=\"transaction-api\"}[5m]) / rate(http_server_request_duration_seconds_count{job=\"transaction-api\"}[5m])",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 4,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "type": "graph",
      "title": "Request Rate by Endpoint",
      "targets": [
        {
          "expr": "sum(rate(http_server_request_duration_seconds_count{job=\"transaction-api\"}[5m])) by (http_route)",
          "legendFormat": "{{http_route}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "type": "graph",
      "title": "Status Code Distribution",
      "targets": [
        {
          "expr": "sum(rate(http_server_request_duration_seconds_count{job=\"transaction-api\"}[5m])) by (http_response_status_code)",
          "legendFormat": "{{http_response_status_code}}",
          "refId": "A"
        }
      ]
    }
  ]
}
