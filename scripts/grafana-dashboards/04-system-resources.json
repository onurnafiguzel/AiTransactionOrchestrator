{
  "title": "System Resources",
  "uid": "system-resources",
  "tags": ["aitransaction", "system"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "type": "graph",
      "title": "GC Collections",
      "targets": [
        {
          "expr": "rate(process_runtime_dotnet_gc_collections_count_total[5m])",
          "legendFormat": "{{generation}} - {{job}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "type": "graph",
      "title": "Memory Allocations",
      "targets": [
        {
          "expr": "rate(process_runtime_dotnet_gc_allocations_size_bytes_total[5m])",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        { "format": "bytes", "show": true },
        { "format": "short", "show": true }
      ]
    },
    {
      "id": 3,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "type": "graph",
      "title": "HTTP Client Requests",
      "targets": [
        {
          "expr": "sum(rate(http_client_request_duration_seconds_count[5m])) by (job)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "type": "graph",
      "title": "Active Requests",
      "targets": [
        {
          "expr": "http_server_active_requests",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ]
    }
  ]
}
