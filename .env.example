# AI Transaction Orchestrator - Docker Environment Configuration

# ============= DATABASE =============
POSTGRES_USER=ato
POSTGRES_PASSWORD=ato_pass
POSTGRES_DB=ato_db

# ============= RABBITMQ =============
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=admin

# ============= ELASTICSEARCH =============
ELASTICSEARCH_VERSION=8.13.4
ES_JAVA_OPTS=-Xms512m -Xmx512m

# ============= KIBANA =============
KIBANA_VERSION=8.13.4

# ============= ASPNETCORE =============
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000

# ============= LOGGING =============
Serilog__MinimumLevel__Default=Information
Serilog__MinimumLevel__Override__Microsoft=Warning
Serilog__MinimumLevel__Override__System=Warning
Serilog__WriteTo__0__Name=Elasticsearch
Serilog__WriteTo__0__Args__nodeUris=http://elasticsearch:9200
Serilog__WriteTo__1__Name=Console

# ============= FRAUD WORKER =============
FraudExplanation__Enabled=false
FraudExplanation__TimeoutSeconds=4
FraudExplanation__Model=gpt-4-mini

# ============= HEALTH CHECKS =============
Health__Port=5010
Health__RabbitMq=amqp://admin:admin@rabbitmq:5672
Health__Postgres=Host=postgres;Port=5432;Database=ato_db;Username=ato;Password=ato_pass

# ============= FEATURE FLAGS =============
Features__OpenAiFraudDetection=false
Features__EnableCache=true
Features__CacheExpiration=300
