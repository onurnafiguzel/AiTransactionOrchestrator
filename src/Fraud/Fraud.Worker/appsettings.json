{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "RabbitMq": {
    "Host": "localhost",
    "Username": "admin",
    "Password": "admin"
  },
  "FraudExplanation": {
    "Enabled": true,
    "Model": "gpt-4.1-mini",
    "TimeoutSeconds": 4,
    "MaxRetries": 2
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "MassTransit": "Information"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "service": "Transaction.Api"
    },
    "WriteTo": [
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "aitransaction-logs-fraud-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true
        }
      },
      { "Name": "Console" }
    ]
  },
  "Health": {
    "Port": 5101,
    "RabbitMq": "amqp://admin:admin@localhost:5672"
  }
}
