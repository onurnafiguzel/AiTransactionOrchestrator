{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "SagaDb": "Host=localhost;Port=5432;Database=ato_db;Username=ato;Password=ato_pass"
  },
  "RabbitMq": {
    "Host": "localhost",
    "Username": "admin",
    "Password": "admin"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "MassTransit": "Information"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "service": "Transaction.Api"
    },
    "WriteTo": [
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "aitransaction-logs-orchestrator-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true
        }
      },
      { "Name": "Console" }
    ]
  },
  "Health": {
    "Port": 5102,
    "RabbitMq": "amqp://admin:admin@localhost:5672",
    "Postgres": "Host=localhost;Port=5432;Database=ato_db;Username=ato;Password=ato_pass"
  }
}
