{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "TransactionDb": "Host=localhost;Port=5432;Database=ato_db;Username=ato;Password=ato_pass",
    "Redis": "localhost:6379"
  },
  "RabbitMq": {
    "Host": "localhost",
    "Username": "admin",
    "Password": "admin"
  },
  "Jwt": {
    "SecretKey": "your-256-bit-secret-key-min-32chars-change-this-in-production!",
    "Issuer": "AiTransactionOrchestrator",
    "Audience": "AiTransactionOrchestrator",
    "ExpirationMinutes": "60"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "MassTransit": "Information"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "service": "Transaction.Api"
    },
    "WriteTo": [
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "aitransaction-logs-transaction-api-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true
        }
      },
      { "Name": "Console" }
    ]
  }
}
