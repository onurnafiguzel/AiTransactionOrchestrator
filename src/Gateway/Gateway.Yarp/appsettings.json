{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "your-256-bit-secret-key-min-32chars-change-this-in-production!",
    "Issuer": "AiTransactionOrchestrator",
    "Audience": "AiTransactionOrchestrator"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Yarp": "Information"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "service": "Gateway.Yarp"
    },
    "WriteTo": [
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "aitransaction-logs-gateway-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true
        }
      },
      { "Name": "Console" }
    ]
  },
  "Tracing": {
    "Jaeger": {
      "Enabled": true,
      "Host": "localhost",
      "Port": 4318
    }
  },
  "ReverseProxy": {
    "Routes": {
      "transaction-api-auth": {
        "ClusterId": "transaction-api",
        "AuthorizationPolicy": "anonymous",
        "RateLimiterPolicy": "auth",
        "TimeoutPolicy": "short",
        "Match": {
          "Path": "/api/v{version}/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v{version}/auth/{**catch-all}" }
        ]
      },
      "transaction-api-transactions-write": {
        "ClusterId": "transaction-api",
        "AuthorizationPolicy": "default",
        "RateLimiterPolicy": "transaction-create",
        "TimeoutPolicy": "medium",
        "Match": {
          "Path": "/api/v{version}/transaction",
          "Methods": [ "POST" ]
        },
        "Transforms": [
          { "PathPattern": "/api/v{version}/transaction" }
        ]
      },
      "transaction-api-transactions-read": {
        "ClusterId": "transaction-api",
        "AuthorizationPolicy": "default",
        "RateLimiterPolicy": "transaction-query",
        "TimeoutPolicy": "short",
        "Match": {
          "Path": "/api/v{version}/transaction/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v{version}/transaction/{**catch-all}" }
        ]
      },
      "transaction-api-audit": {
        "ClusterId": "transaction-api",
        "AuthorizationPolicy": "default",
        "RateLimiterPolicy": "transaction-query",
        "TimeoutPolicy": "medium",
        "Match": {
          "Path": "/api/v{version}/audit/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v{version}/audit/{**catch-all}" }
        ]
      },
      "support-api": {
        "ClusterId": "support-bot",
        "AuthorizationPolicy": "default",
        "RateLimiterPolicy": "support",
        "TimeoutPolicy": "long",
        "Match": {
          "Path": "/api/v{version}/support/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v{version}/support/{**catch-all}" }
        ]
      },
      "transaction-api-health": {
        "ClusterId": "transaction-api",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/transaction/health/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/health/{**catch-all}" }
        ]
      },
      "support-bot-health": {
        "ClusterId": "support-bot",
        "AuthorizationPolicy": "anonymous",
        "Match": {
          "Path": "/support/health/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/health/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "transaction-api": {
        "Destinations": {
          "primary": {
            "Address": "http://localhost:5277"
          }
        },
        "HttpClient": {
          "RequestHeaderEncoding": "utf-8"
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Path": "/health/live"
          }
        }
      },
      "support-bot": {
        "Destinations": {
          "primary": {
            "Address": "http://localhost:5040"
          }
        },
        "HttpClient": {
          "RequestHeaderEncoding": "utf-8"
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:10",
            "Path": "/health/live"
          }
        }
      }
    }
  },
  "TimeoutPolicies": {
    "Short": 10,
    "Medium": 30,
    "Long": 60
  }
}
